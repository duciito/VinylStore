@model VinylStore.ViewModels.Account.RegisterVM
@{
    ViewBag.Title = "Регистрация";
}

@section styles
{
    <link href="~/Content/css/register.css" rel="stylesheet" />
}

<section id="form-container">
    <header>
        <i class="fa fa-user-o" aria-hidden="true"></i>
        <h2>Стани наш клиент</h2>
        <p>Безплатно е и отнема по-малко от 30 секунди.</p>
    </header>


    <div class="form">
        <form action="/Account/Register" method="post">
            @Html.ValidationMessage("UsernameTaken")

            <div class="input-group">
                @Html.LabelFor(m => m.Username)
                @Html.ValidationMessageFor(m => m.Username, null)
                <div style="clear: both;"></div>
                @Html.TextBoxFor(m => m.Username)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.FirstName, null)
                <div style="clear: both;"></div>
                @Html.TextBoxFor(m => m.FirstName)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.LastName, null)
                <div style="clear: both;"></div>
                @Html.TextBoxFor(m => m.LastName)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password, null)
                <div style="clear: both;"></div>
                @Html.PasswordFor(m => m.Password)
            </div>

            <button type="submit">Регистрирация</button>
        </form>
    </div>
</section>

